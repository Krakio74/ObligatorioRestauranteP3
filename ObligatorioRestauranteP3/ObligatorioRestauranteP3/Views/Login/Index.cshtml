@model ObligatorioP3.Models.Login

@{
    ViewData["Title"] = "Inicie session";
}

<form asp-action="LoginVerifcation">
    <div class="ow-body">
        <div class="ow-halfbody">
            <h1 class="texto">Login</h1>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Ingrese su correo electronico" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Coloque su contrasena" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="send">Enviar</button>
            </div>
        </div>
    </div>
    <style>

        body {
            background-color: #d9e4ec;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .texto {
            color: black;
        }

     
        .ow-halfbody {
            background-color: rgb(255, 255, 255, 0.5); /* Fondo blanco transparente */
            border: 1px solid #ccc; /* Borde gris */
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.3); /* Sombra */
            padding: 20px;
            max-width: 300px;
            width: 100%;
            text-align: center;
        }

        button[type="submit"] {
            background-color: #003366;
            border: none;
            border-radius: 5px;
            color: #fff;
            padding: 10px 20px;
            cursor: pointer;
            width: 100%;
        }

            button[type="submit"]:hover {
                background-color: #002244;
            }

        .text-danger {
            color: #ff0000;
        }

        .ow-halfbody h2 {
            margin-bottom: 20px;
            color: #333;
        }

        .ow-halfbody input[type="text"],
        .ow-halfbody input[type="password"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .ow-halfbody input[type="submit"] {
            width: 100%;
            background-color: transparent; /* Color de fondo */
            color: white;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .ow-halfbody input[type="submit"]:hover {
                background-color: #45a049; /* Color de fondo al pasar el ratón */
            }
    </style>


</form>
